Bootstrap: docker
From: ubuntu:20.04

%files
    ./ /project

%post
    env DEBIAN_FRONTEND=noninteractive

    apt-get update && 
    apt-get install -y g++ cmake libopenmpi-dev

    mkdir build
    cd build
    cmake ..
    cmake build .
    cp main ..
    cd ..

%runscript
    mpirun -np 2 /project/main
