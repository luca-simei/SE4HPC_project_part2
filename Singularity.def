Bootstrap: docker
From: ubuntu:20.04

%post
    export DEBIAN_FRONTED=noninteractive

    apt-get update && apt-get install -y \
        mpich \
        cmake \
        build-essentials \
        && apt-get clean

    ./build.sh

    mkdir -p /app
    cp -r /project /app

%files
    ./ /project

%runscript
    cd /app/project/build
    mpirun -np 2 ./main
