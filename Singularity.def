Bootstrap: docker
From: ubuntu:20.04

%files
    ./ /project

%post
    export DEBIAN_FRONTED=noninteractive

    apt-get update && apt-get install -y \
        mpich \
        cmake \
        build-essentials \
        && apt-get clean

    mkdir build
    cd build
    cmake ..
    make

%runscript
    mpirun -np 2 ./main
